{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "dist/functions"
  },
  "hosting": [
    {
      "public": "dist/public",
      "target": "ajsbooks-nextjs",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/book{,/**}",
          "function": "book"
        }
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}
