{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": [
    {
      "public": "out",
      "target": "ajsbooks-nextjs",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}
