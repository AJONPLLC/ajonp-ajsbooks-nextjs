{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "dist/functions"
  },
  "hosting": [
    {
      "public": "dist/public",
      "target": "ajsbooks-nextjs",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/book/**",
          "destination": "/book.html"
        },
        {
          "source": "/books",
          "destination": "/books.html"
        },
        {
          "source": "**/**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}